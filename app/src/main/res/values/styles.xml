<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AccentButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/white</item>
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="LoginTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:buttonStyle">@style/AccentButtonStyle</item>
    </style>

</resources>
